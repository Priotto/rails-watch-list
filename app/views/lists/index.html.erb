





<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80);">
  <div class="container">
    <h1>Le Wagon brings <strong>tech skills</strong> to <strong>creative people</strong>!</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
  </div>
</div>


<div class = "container">
  <div class = "carousell-header d-flex justify-content-between py-4 align-items-center" >
    <h2>My lists</h2>
    <%= link_to "Create a new list", new_list_path, class:"btn btn-primary btn-md h-50"%>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
      <%= link_to list_path(list.id) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <%= list.name %>

        </div>
      <% end %>
    <% end %>
  </div>
</div>
